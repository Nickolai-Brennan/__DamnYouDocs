{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://damnyoudocs.com/schemas/terminology-glossary.schema.json",
  "title": "Terminology Glossary Input Schema",
  "type": "object",
  "additionalProperties": false,

  "required": ["project_name", "terms"],

  "properties": {

    "project_name": {
      "type": "string",
      "minLength": 3
    },

    "terms": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["term", "definition"],
        "additionalProperties": false,
        "properties": {
          "term": {
            "type": "string",
            "minLength": 2
          },
          "definition": {
            "type": "string",
            "minLength": 10
          },
          "context": {
            "type": "string"
          },
          "related_terms": {
            "type": "array",
            "items": { "type": "string" }
          },
          "category": {
            "type": "string"
          }
        }
      }
    }
  }
}
